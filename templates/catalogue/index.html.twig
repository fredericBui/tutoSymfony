{% extends 'base.html.twig' %}

{% block title %}Produits index{% endblock %}

{% block body %}
    <h1>Produits index</h1>

        {% for produit in produits %}

        <div class="card mb-3" >
            <div class="row no-gutters">
                <div class="col-md-4">
                <img src= {{ asset('uploads/' ~ produit.imageFilename )}} width="100%" />
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{ produit.nom }}</h5>
                    <p class="card-text">{{ produit.description }}</p>
                    <p class="card-text">{{ produit.prix }} euros</p>
                    <a href="{{ path('catalogue_show', {'id': produit.id}) }}" class="btn btn-primary">Voir</a>
                </div>
                </div>
            </div>
        </div>

        {% else %}
            <p>Aucun produit trouv√© dans le catalogue.</p>
        {% endfor %}

{% endblock %}
